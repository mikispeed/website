{% set drupalrs_block = drupalrs_block ?: ('user-' ~ user.bundle ~ (view_mode != 'default' ? '-' ~ view_mode))|clean_class %}
{% set classes = [
drupalrs_block,
user.isBlocked() ? drupalrs_block ~ '--blocked',
] %}
<article{{ attributes.addClass(classes) }}>
    {% block content %}
        {% if content %}
            {{- content -}}
        {% endif %}
    {% endblock %}
</article>